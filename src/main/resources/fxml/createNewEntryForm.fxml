<?import javafx.scene.layout.AnchorPane?>

<AnchorPane onDragDetected="#chooseMainFile" prefHeight="400.0" prefWidth="877.0" stylesheets="@../styles/dark-theme.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CreateNewEntryFormController">
   <JFXCheckBox fx:id="txtCheckBox" layoutX="30.0" layoutY="119.0" text="add TXT File" textFill="#ffd0d0" visible="false" />
   <JFXCheckBox fx:id="dxfCheckBox" layoutX="30.0" layoutY="154.0" text="add DXF File" textFill="#ffd0d0" visible="false" />
   <JFXCheckBox layoutX="30.0" layoutY="189.0" text="add XML File" textFill="#ffd0d0" visible="false" fx:id="xmlCheckBox" />
   <JFXComboBox fx:id="comboBox" focusColor="#ffff8d" layoutX="49.0" layoutY="38.0" prefHeight="25.0" prefWidth="150.0" unFocusColor="#fff7f7" />
   <JFXButton fx:id="mainFileChooseButton" layoutX="314.0" layoutY="38.0" onAction="#chooseMainFile" styleClass="login-button" text="Добавить основной файл">
      <graphic>
         <FontAwesomeIconView glyphName="PLUS" />
      </graphic>
   </JFXButton>
   <JFXListView fx:id="listView" layoutX="528.0" layoutY="100.0" prefHeight="200.0" prefWidth="264.0" />
   <JFXButton fx:id="createButton" layoutX="378.0" layoutY="343.0" onAction="#insertNewModel" styleClass="login-button" text="Создать запись">
      <graphic>
         <FontAwesomeIconView glyphName="CHECK" />
      </graphic>
   </JFXButton>
   <JFXButton fx:id="closeButton" layoutX="507.0" layoutY="343.0" onAction="#closeForm" styleClass="login-button" text="Отмена">
      <graphic>
         <FontAwesomeIconView glyphName="CLOSE" />
      </graphic>
   </JFXButton>
   <JFXButton fx:id="extraFilesChooseButton" layoutX="52.0" layoutY="273.0" onAction="#chooseExtraFiles" styleClass="login-button" text="Добавить доп. файлы" visible="false">
      <graphic>
         <FontAwesomeIconView glyphName="PLUS" />
      </graphic>
   </JFXButton>
   <JFXSpinner fx:id="loading" layoutX="327.0" layoutY="343.0" prefHeight="27.0" prefWidth="51.0" visible="false" />
   <Label layoutX="52.0" layoutY="14.0" text="Тип модели" textFill="#dac9c9" />
   <RadioButton fx:id="rbEvent" layoutX="218.0" layoutY="300.0" mnemonicParsing="false" text="Event" textFill="WHITE">
      <toggleGroup>
         <ToggleGroup fx:id="syn" />
      </toggleGroup></RadioButton>
   <RadioButton fx:id="rbMutex" layoutX="218.0" layoutY="331.0" mnemonicParsing="false" text="Mutex" textFill="WHITE" toggleGroup="$syn" />
   <RadioButton fx:id="rbSemaphore" layoutX="218.0" layoutY="361.0" mnemonicParsing="false" text="Semaphore" textFill="WHITE" toggleGroup="$syn" />
   <ListView fx:id="textLogList" layoutX="287.0" layoutY="100.0" prefHeight="200.0" prefWidth="200.0" />
   <CheckBox fx:id="checkFiles" layoutX="528.0" layoutY="43.0" mnemonicParsing="false" onAction="#changeValueCheck" text="Проверять изменение файлов" />
</AnchorPane>
